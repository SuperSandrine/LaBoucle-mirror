<section class="p-10 bg-primary">    
  <h2 class="font-display--headings text-h2 pb-8 pl-8">
    Nos prochaines dates    
  </h2>

  <div class="space-y-6">
    {datesCollection.map((event) => (
      <div class="flex flex-col md:flex-row md:items-center gap-6 pb-6 border-b border-very-dark/20">
        
        <div class="md:w-48">
          <p class="font-display--headings text-3xl text-very-dark">
            {event.date}
          </p>
          <p class="text-lg text-very-dark/70">{event.year}</p>
        </div>

        <div class="md:w-64">
          <p class="text-very-dark/80">{event.lieu}</p>
        </div>

        <div class="flex-grow">
          <h3 class="font-display--headings text-2xl text-very-dark">
            {event.titre}
          </h3>
          <p class="text-sm text-very-dark/70">{event.type}</p>
        </div>

        <a 
          href="/calendrier" 
          class="inline-block border-2 border-very-dark text-very-dark font-display--headings px-6 py-3 text-lg hover:bg-very-dark hover:text-primary transition"
        >
          JE VEUX EN SAVOIR PLUS
        </a>

      </div>
    ))}
  </div>

  <div class="text-center mt-12">
    <a 
      href="/calendrier" 
      class="inline-block bg-dark text-primary font-display--headings px-8 py-4 text-xl hover:opacity-90 transition"
    >
      ET LES AUTRES DATES, C'EST PAR ICI
    </a>
  </div>
</section>

<section class="p-10 bg-primary">    
  <h2 class="font-display--headings text-h2 pb-8 pl-8">
